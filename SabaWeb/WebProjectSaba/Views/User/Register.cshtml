@model User
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="border p-3 p-4 text-center w-100">
    <form method="post" asp-action="Register">
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <input type="text" class="form" asp-for="Name" placeholder="Name" required />
        </div>
        <div class="mb-3">
            <input type="text" class="form" asp-for="Email" placeholder="Email Address" required />
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
        <br />
        <br />
        <a class="btn btn-primary" asp-action="Index">Back To List</a>
        <a class="btn btn-primary" asp-action="Login">Login</a>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

